<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:angle="135"
                        android:startColor="@color/accent_gold_dark"
                        android:endColor="@color/accent_orange_dark"
                        android:type="linear" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <item android:top="1dp">
                <shape>
                    <solid android:color="#10FFFFFF" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- 普通状态 -->
    <item>
        <layer-list>
            <item>
                <!-- 阴影效果 -->
                <shape>
                    <gradient
                        android:angle="135"
                        android:startColor="@color/accent_gold"
                        android:endColor="@color/accent_orange"
                        android:type="linear" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <item android:top="1dp">
                <!-- 高光效果 -->
                <shape>
                    <solid android:color="#20FFFFFF" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
