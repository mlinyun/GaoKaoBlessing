<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#1a1a2e"
                android:centerColor="#16213e"
                android:endColor="#0f3460"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 浮动装饰元素 -->
    <item>
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp" />
            <gradient
                android:startColor="#20FFD700"
                android:endColor="#10FFD700"
                android:type="radial"
                android:gradientRadius="150dp" />
        </shape>
    </item>
</layer-list>
