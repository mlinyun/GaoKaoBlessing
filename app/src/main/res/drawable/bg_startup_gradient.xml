<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- 主渐变背景 -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#0f0f23"
                android:centerColor="#1a1a2e"
                android:endColor="#16213e"
                android:type="linear" />
        </shape>
    </item>
      <!-- 顶部渐变覆盖 -->
    <item android:top="0dp" android:bottom="400dp">
        <shape>
            <gradient
                android:angle="180"
                android:startColor="#33000000"
                android:endColor="#00000000"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- 底部渐变覆盖 -->
    <item android:top="400dp" android:bottom="0dp">
        <shape>
            <gradient
                android:angle="0"
                android:startColor="#00000000"
                android:endColor="#22000000"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>
