<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外层阴影 -->
    <item android:top="2dp" android:left="2dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#33000000"
                android:endColor="#66000000"
                android:type="linear" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- 主渐变背景 -->
    <item android:bottom="2dp" android:right="2dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/accent_gold"
                android:centerColor="#FFCC33"
                android:endColor="@color/accent_orange"
                android:type="linear" />
            <corners android:radius="30dp" />
            <stroke
                android:width="1dp"
                android:color="#33FFFFFF" />
        </shape>
    </item>

    <!-- 内层高光 -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape>
            <gradient
                android:angle="135"
                android:startColor="#44FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="22dp" />
        </shape>
    </item>
</layer-list>
