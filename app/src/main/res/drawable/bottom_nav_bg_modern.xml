<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 - 现代化半透明毛玻璃效果 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#E6000000"
                android:centerColor="#F0000000"
                android:endColor="#F5000000" />
        </shape>
    </item>
    
    <!-- 顶部亮光线条 -->
    <item android:top="0dp" android:height="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="0"
                android:startColor="#00FFD700"
                android:centerColor="#80FFD700"
                android:endColor="#00FFD700" />
        </shape>
    </item>
    
    <!-- 细微的内部光晕效果 -->
    <item android:top="1dp" android:height="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#10FFD700"
                android:endColor="#00FFD700" />
        </shape>
    </item>
</layer-list>
